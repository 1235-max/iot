<!-- views/dashboardPatient.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Patient Dashboard</title>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script src="/js/charts.js" defer></script> <!-- Defer loading charts -->
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <h1>Welcome, <%= user ? user.username : "Guest" %> (Patient)</h1> <!-- avoid crash if user missing -->

  <div>
    <h2>Vitals</h2>
    <canvas id="temperatureChart" width="400" height="200"></canvas>
    <canvas id="heartRateChart" width="400" height="200"></canvas>
    <canvas id="spo2Chart" width="400" height="200"></canvas>
  </div>

  <form action="/auth/logout" method="POST">
    <button type="submit">Logout</button>
  </form>
</body>
</html>
